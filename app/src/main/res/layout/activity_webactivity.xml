<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".WebActivity">

    <WebView
        android:id="@+id/WebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></WebView>

    <Button
        android:id="@+id/button"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:background="#000033EE"
        android:gravity="top|left"
        app:layout_constraintStart_toStartOf="@+id/WebView"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/jsField"
        android:layout_width="225dp"
        android:layout_height="196dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:background="#77555555"
        android:gravity="top|left"
        android:textColor="#EEEEAA"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/run"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#77333333"
        android:text="Run"
        android:textAllCaps="false"
        android:textColor="#DDDDAA"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/jsField"
        app:layout_constraintEnd_toEndOf="@+id/jsField"
        app:layout_constraintTop_toTopOf="@+id/fullscreen"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/fullscreen"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:background="#77333333"
        android:text="Fullscreen"
        android:textAllCaps="false"
        android:textColor="#DDDDAA"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/jsField"
        app:layout_constraintEnd_toStartOf="@+id/run" />

    <Button
        android:id="@+id/rotation"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"


        android:background="#77333333"
        android:text="Rotation"
        android:textAllCaps="false"
        android:textColor="#DDDDAA"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/fullscreen"
        app:layout_constraintEnd_toStartOf="@+id/fullscreen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/libraryLoader"
        app:layout_constraintTop_toTopOf="@+id/fullscreen" />

    <Button
        android:id="@+id/libraryLoader"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:background="#77333333"
        android:text="Load Library"
        android:textAllCaps="false"
        android:textColor="#DDDDAA"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/jsField"
        app:layout_constraintStart_toStartOf="@+id/jsField" />


</androidx.constraintlayout.widget.ConstraintLayout>